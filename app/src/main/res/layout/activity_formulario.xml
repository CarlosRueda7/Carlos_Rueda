<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_login_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvFormulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="173dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="181dp"
            android:autoText="false"
            android:fontFamily="sans-serif-condensed"
            android:text="Formulario"
            android:textColor="#F4F4F4"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="212dp"
            android:layout_height="32dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="99dp"
            android:background="@drawable/shape_edittext_login"
            android:ems="10"
            android:hint="   Nombre"
            android:inputType="textPersonName"
            android:textColorHint="#EAE5E5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFormulario" />

        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="212dp"
            android:layout_height="32dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shape_edittext_login"
            android:ems="10"
            android:hint="   Precio"
            android:inputType="textPersonName"
            android:textColorHint="#EAE5E5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" />

        <EditText
            android:id="@+id/etImagen"
            android:layout_width="212dp"
            android:layout_height="32dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="192dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shape_edittext_login"
            android:ems="10"
            android:hint="   Imagen"
            android:inputType="textPersonName"
            android:textColorHint="#EAE5E5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="156dp"
            android:layout_height="55dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/shape_btn"
            android:onClick="clickGuardar"
            android:text="Enviar"
            android:textColor="#F79800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etImagen" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>